{
  "IDX.aI.enableInlineCompletion": true,
  "IDX.aI.enableCodebaseIndexing": true,
  "IDX.corgiMode": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "always"
  },
  "editor.formatOnSave": true,
  "editor.bracketPairColorization.enabled": true,
  "files.encoding": "utf8",
  "Codegeex.Privacy": false,
  "Codegeex.EnableExtension": false,
  "Codegeex.CompletionModel": "CodeGeeX Pro[Beta]",
  "Codegeex.Chat.LanguagePreference": "中文",
  "Codegeex.Comment.LanguagePreference": "English",
  "Codegeex.SidebarUI.LanguagePreference": "中文",
  "Codegeex.CommitMessageStyle": "ConventionalCommits",
  "workbench.preferredDarkColorTheme": "Monospace Dark",
  "workbench.preferredLightColorTheme": "One Dark Pro",
  "workbench.iconTheme": "simple-icons",
  "window.autoDetectColorScheme": true,
  "workbench.layoutControl.enabled": false,
  "inlineChat.mode": "preview",
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "editor.rename.enablePreview": false,
  "redhat.telemetry.enabled": false,
  "swaggerViewer.showOnlyFileName": true,
  "workbench.editor.enablePreviewFromQuickOpen": true //防止在侧边打开新标签页
